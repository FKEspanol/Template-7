---
import Section from '../layoutComponents/Section.astro'
---

<Section>
  <div class="w-full mb-8">
    <div style="overflow:hidden;resize:none;max-width:100%;height:400px;">
      <div id="my-map-display" style="height:100%; width:100%;max-width:100%;">
        <iframe
          style="height:100%;width:100%;border:0;"
          frameborder="0"
          src="https://www.google.com/maps/embed/v1/place?q=Cabantian,+Buhangin,+Davao+City,+Davao+del+Sur,+Philippines&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
        >
        </iframe>
      </div>
      <a
        class="embedded-map-code"
        rel="nofollow"
        href="https://www.bootstrapskins.com/themes"
        id="grab-maps-authorization"
        >premium bootstrap themes
      </a>
    </div>
  </div>
  <div class="lg:grid lg:grid-cols-3">
    <div class="lg:col-span-1 mb-4 lg:mb-0 mr-3">
      <div class="flex items-center mb-10">
        <i
          class="p-3 bg-primary text-white rounded fa-solid fa-location text-xl mr-3"
        ></i>
        <div class="leading-7">
          <h4 class="text-2xl font-semibold">Location</h4>
          <p class="text-sm text-smoke">
            A108 Adam Street, New York, NY 535022
          </p>
        </div>
      </div>
      <div class="flex items-center mb-10">
        <i
          class="p-3 bg-primary text-white rounded fa-solid fa-envelope text-xl mr-3"
        ></i>
        <div class="leading-7">
          <h4 class="text-2xl font-semibold">Email</h4>
          <p class="text-sm text-smoke">info@example.com</p>
        </div>
      </div>
      <div class="flex items-center">
        <i
          class="p-3 bg-primary text-white rounded fa-solid fa-phone text-xl mr-3"
        ></i>
        <div class="leading-7">
          <h4 class="text-2xl font-semibold">Call</h4>
          <p class="text-sm text-smoke">+1 5589 55488 55</p>
        </div>
      </div>
    </div>
    <div class="lg:col-span-2">
      <form action="" class="w-full">
        <div class="md:flex w-full mb-4">
          <input
            type="text"
            name=""
            id=""
            class="md:mr-4 mb-4 md:mb-0 w-full p-2 border"
            placeholder="Your Name"
          />
          <input
            type="email"
            name=""
            id=""
            class="w-full p-2 border"
            placeholder="Your Email"
          />
        </div>
        <input
          type="text"
          name=""
          id=""
          class="w-full p-2 mb-4 border"
          placeholder="Subject"
        />
        <textarea
          name=""
          id=""
          rows="5"
          class="w-full p-2 border"
          placeholder="Message"></textarea>
      </form>
    </div>
  </div>
</Section>

<style>
  #my-map-display .text-marker {
  }
  .map-generator {
    max-width: 100%;
    max-height: 100%;
    background: none;
  }
</style>
